<%# Show details of a single user %>

<% content_for(:page_title, "User Details") %>

<%# Back Link %>
<div class="mb-6">
  <%= link_to "← Back to Users", admin_users_path,
      class: "text-blue-600 hover:text-blue-800" %>
</div>

<%# User Details Card %>
<div class="bg-white rounded-lg shadow overflow-hidden mb-6">
  <div class="px-6 py-4 ">
    <div class="flex items-center">
      <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center">
        <span class="text-2xl text-blue-600 font-medium">
          <%= @user.full_name&.first&.upcase || @user.email_address.first.upcase %>
        </span>
      </div>
      <div class="ml-4">
        <h3 class="text-lg font-semibold text-gray-800">
          <%= @user.full_name || "No name" %>
        </h3>
        <p class="text-gray-600"><%= @user.email_address %></p>
      </div>
    </div>
  </div>

  <div class="p-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-gray-50 rounded-lg p-4 text-center">
        <p class="text-2xl font-bold text-gray-800">
          $<%= number_with_precision(@user.credit || 0, precision: 2) %>
        </p>
        <p class="text-sm text-gray-500">Account Credit</p>
      </div>
      <div class="bg-gray-50 rounded-lg p-4 text-center">
        <p class="text-2xl font-bold text-gray-800"><%= @bookings.count %></p>
        <p class="text-sm text-gray-500">Total Bookings</p>
      </div>
      <div class="bg-gray-50 rounded-lg p-4 text-center">
        <p class="text-2xl font-bold text-gray-800">
          <%= @user.created_at.strftime("%b %d, %Y") %>
        </p>
        <p class="text-sm text-gray-500">Member Since</p>
      </div>
    </div>
  </div>
</div>

<%# User's Bookings %>
<div class="bg-white rounded-lg shadow overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200">
    <h3 class="text-lg font-semibold text-gray-800">Booking History</h3>
  </div>

  <% if @bookings.any? %>
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Route
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Date
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Seats
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Total
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Status
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @bookings.each do |booking| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900">
                <%= booking.bus_schedule.route.origin_province.name %> →
                <%= booking.bus_schedule.route.destination_province.name %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= booking.bus_schedule.departure_time.strftime("%b %d, %Y %H:%M") %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= booking.number_of_seats %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              $<%= number_with_precision(booking.total_price, precision: 2) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
                <%= booking.status.capitalize %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-500">No bookings found for this user</p>
    </div>
  <% end %>
</div>

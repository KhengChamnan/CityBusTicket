<%# List all bookings (read-only) %>

<% content_for(:page_title, "Bookings") %>

<%# using turbo stream%>
<%= turbo_stream_from "bookings" %>

<%# Page Header %>
<div class="mb-6">
  <p class="text-gray-600">View all customer bookings</p>
</div>

<%# Bookings Table %>
<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Passenger
        </th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Route
        </th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Travel Date
        </th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Seats
        </th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Total
        </th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Status
        </th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
          Actions
        </th>
      </tr>
    </thead>
    <tbody id="bookings_table" class="bg-white divide-y divide-gray-200">
      <% @bookings.each do |booking| %>
        <%= render "booking_row", booking: booking %>
      <% end %>
    </tbody>
  </table>

  <% if @bookings.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-500">No bookings found</p>
    </div>
  <% end %>
</div>

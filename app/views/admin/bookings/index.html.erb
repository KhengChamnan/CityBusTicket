<%# List all bookings (read-only) %>

<% content_for(:page_title, "Bookings") %>

<%# Page Header %>
<div class="mb-6">
  <p class="text-gray-600">View all customer bookings</p>
</div>

<%# Bookings Table %>
<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Passenger
        </th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Route
        </th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Travel Date
        </th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Seats
        </th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Total
        </th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Status
        </th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
          Actions
        </th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @bookings.each do |booking| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm font-medium text-gray-900">
              <%= booking.passenger_name %>
            </div>
            <div class="text-sm text-gray-500">
              <%= booking.passenger_email %>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm font-medium text-gray-900">
              <%= booking.bus_schedule.route.origin_province.name %> â†’
              <%= booking.bus_schedule.route.destination_province.name %>
            </div>
            <div class="text-sm text-gray-500">
              Bus: <%= booking.bus_schedule.bus.plate_number %>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm text-gray-900">
              <%= booking.bus_schedule.departure_time.strftime("%b %d, %Y") %>
            </div>
            <div class="text-sm text-gray-500">
              <%= booking.bus_schedule.departure_time.strftime("%H:%M") %>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            <%= booking.number_of_seats %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            $<%= number_with_precision(booking.total_price, precision: 2) %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
              <%= booking.status.capitalize %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
            <%= link_to "View", admin_booking_path(booking),
                class: "text-blue-600 hover:text-blue-900" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if @bookings.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-500">No bookings found</p>
    </div>
  <% end %>
</div>
